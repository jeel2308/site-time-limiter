{
    "manifest_version": 2,
    "name": "Site Time Limiter",
    "version": "1.0",
    "description": "Limits daily viewing time for YouTube like sites.",
    "permissions": [
      "storage",
      "tabs",
      "alarms",
      "*://*.youtube.com/*",
      "*://*.netflix.com/*",
      "*://*.hotstar.com/*"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*", "*://*.netflix.com/*", "*://*.hotstar.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }